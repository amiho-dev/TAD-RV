<!-- ═══════════════════════════════════════════════════════════════════════
     MainWindow.xaml — TAD.RV Management Console main window
     Dark-themed sidebar navigation with content area
     ═══════════════════════════════════════════════════════════════════════ -->
<Window x:Class="TadConsole.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:TadConsole.ViewModels"
        xmlns:v="clr-namespace:TadConsole.Views"
        Title="TAD.RV Management Console"
        Width="1200" Height="780"
        MinWidth="900" MinHeight="600"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource PrimaryBrush}">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <!-- View ↔ ViewModel mapping -->
        <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
            <v:DashboardView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:DeployViewModel}">
            <v:DeployView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:PolicyViewModel}">
            <v:PolicyView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:AlertsViewModel}">
            <v:AlertsView />
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- ═══ Sidebar ═══════════════════════════════════════════════ -->
        <Border Grid.Column="0" Background="{StaticResource SidebarBrush}"
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0">
            <DockPanel>
                <!-- Logo / Title -->
                <StackPanel DockPanel.Dock="Top" Margin="20,24,20,32">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE83D;"
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="28"
                                   Foreground="{StaticResource HighlightBrush}"
                                   VerticalAlignment="Center" />
                        <StackPanel Margin="12,0,0,0">
                            <TextBlock Text="TAD.RV"
                                       FontSize="20" FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryBrush}" />
                            <TextBlock Text="Management Console"
                                       FontSize="11"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,-2,0,0" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!-- Navigation -->
                <StackPanel DockPanel.Dock="Top">
                    <TextBlock Text="NAVIGATION"
                               FontSize="10" FontWeight="SemiBold"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="20,0,0,8"
                               Opacity="0.6" />

                    <RadioButton Style="{StaticResource NavButton}"
                                 Content="Dashboard"
                                 Tag="&#xE80F;"
                                 IsChecked="True"
                                 Command="{Binding NavigateDashboardCommand}" />

                    <RadioButton Style="{StaticResource NavButton}"
                                 Content="Deployment"
                                 Tag="&#xE896;"
                                 Command="{Binding NavigateDeployCommand}" />

                    <RadioButton Style="{StaticResource NavButton}"
                                 Content="Policy Editor"
                                 Tag="&#xE7EF;"
                                 Command="{Binding NavigatePolicyCommand}" />

                    <RadioButton Style="{StaticResource NavButton}"
                                 Content="Alerts &amp; Logs"
                                 Tag="&#xE783;"
                                 Command="{Binding NavigateAlertsCommand}" />
                </StackPanel>

                <!-- Footer -->
                <StackPanel DockPanel.Dock="Bottom"
                            VerticalAlignment="Bottom"
                            Margin="20,0,20,16">
                    <Border Height="1"
                            Background="{StaticResource BorderBrush}"
                            Margin="0,0,0,12" />
                    <TextBlock Text="TAD Europe © 2026"
                               FontSize="10"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Opacity="0.5" />
                    <TextBlock Text="tad-it.eu — v1.0.0"
                               FontSize="10"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Opacity="0.4"
                               Margin="0,2,0,0" />
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- ═══ Content Area ══════════════════════════════════════════ -->
        <ContentControl Grid.Column="1"
                        Content="{Binding CurrentView}"
                        Margin="0" />
    </Grid>
</Window>
