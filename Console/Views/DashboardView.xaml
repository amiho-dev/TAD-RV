<!-- DashboardView.xaml â€” System overview dashboard -->
<UserControl x:Class="TadConsole.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource PrimaryBrush}">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="32,28">
        <StackPanel MaxWidth="900">

            <TextBlock Text="Dashboard" Style="{StaticResource SectionHeader}" />

            <!-- Status Cards Row -->
            <UniformGrid Columns="3" Margin="0,0,0,24">
                <Border Style="{StaticResource Card}" Margin="0,0,12,0">
                    <StackPanel>
                        <TextBlock Text="Service Status" FontSize="11"
                                   Foreground="{StaticResource TextSecondaryBrush}" />
                        <TextBlock Text="{Binding ServiceStatus}" FontSize="22" FontWeight="Bold"
                                   Foreground="{StaticResource SuccessBrush}" Margin="0,6,0,0" />
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="6,0">
                    <StackPanel>
                        <TextBlock Text="Driver Status" FontSize="11"
                                   Foreground="{StaticResource TextSecondaryBrush}" />
                        <TextBlock Text="{Binding DriverStatus}" FontSize="22" FontWeight="Bold"
                                   Foreground="{StaticResource WarningBrush}" Margin="0,6,0,0" />
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="12,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Active Clients" FontSize="11"
                                   Foreground="{StaticResource TextSecondaryBrush}" />
                        <TextBlock Text="{Binding ActiveClients}" FontSize="22" FontWeight="Bold"
                                   Foreground="{StaticResource HighlightBrush}" Margin="0,6,0,0" />
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- Status Cards Row 2 (Updates & License) -->
            <UniformGrid Columns="2" Margin="0,24,0,24">
                <Border Style="{StaticResource Card}" Margin="0,0,12,0">
                    <StackPanel>
                        <TextBlock Text="Software Update" FontSize="11" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextSecondaryBrush}" />
                        <TextBlock Text="{Binding UpdateStatus}" FontSize="14" TextWrapping="Wrap"
                                   Foreground="{Binding UpdateAvailable, Converter={StaticResource BoolToColorConverter}}" 
                                   Margin="0,8,0,0" />
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource Card}" Margin="12,0,0,0">
                    <StackPanel>
                        <TextBlock Text="License Status" FontSize="11" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextSecondaryBrush}" />
                        <TextBlock Text="Active (TAD.RV Enterprise)" FontSize="14"
                                   Foreground="{StaticResource SuccessBrush}" Margin="0,8,0,0" />
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- Release Details (Visible only when update is available) -->
            <Border Style="{StaticResource Card}" Margin="0,0,0,24"
                    Visibility="{Binding UpdateAvailable, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel>
                    <TextBlock Text="Release Notes" FontSize="14" FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,12" />
                    <ScrollViewer MaxHeight="300" VerticalScrollBarVisibility="Auto">
                        <TextBlock Text="{Binding ReleaseNotes}" 
                                   FontSize="13" FontFamily="Consolas, Monospace" 
                                   Foreground="{StaticResource TextSecondaryBrush}" 
                                   TextWrapping="Wrap" />
                    </ScrollViewer>
                </StackPanel>
            </Border>

            <!-- Alerts Summary -->
            <Border Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="Recent Alerts" FontSize="14" FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,8" />
                    <TextBlock Text="{Binding AlertCount, StringFormat='There are {0} pending alert(s).'}"
                               FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" />
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
