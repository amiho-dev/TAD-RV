<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <EnableWindowsTargeting>true</EnableWindowsTargeting>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <RootNamespace>TadBootstrap</RootNamespace>
    <AssemblyName>TadBootstrap</AssemblyName>
    <PublishSingleFile>true</PublishSingleFile>
    <SelfContained>true</SelfContained>
    <Version>1.0.0.1</Version>
    <Company>TAD Europe</Company>
    <Copyright>(C) 2026 TAD Europe â€” https://tad-it.eu</Copyright>
    <Product>TAD.RV Bootstrap Loader</Product>
    <Description>Zero-install bootstrap: copies binaries from UNC share, registers a SYSTEM service with recovery, and starts it. Designed for GPO startup script execution.</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.ServiceProcess.ServiceController" Version="8.0.1" />
  </ItemGroup>

</Project>
