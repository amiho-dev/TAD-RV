<Window x:Class="TadTeacher.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TAD.RV"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Width="520" Height="340"
        Topmost="True">

    <Border CornerRadius="16" Background="#0D1117" BorderBrush="#30363D" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="0" Color="#000000" Opacity="0.6" />
        </Border.Effect>

        <Grid Margin="40,32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Logo + Product Name -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                <Image x:Name="LogoImage" Width="40" Height="40" Margin="0,0,12,0"
                       RenderOptions.BitmapScalingMode="HighQuality" />
                <TextBlock Text="TAD.RV" FontSize="38" FontWeight="Bold"
                           Foreground="#58A6FF" VerticalAlignment="Center" />
            </StackPanel>

            <!-- Subtitle -->
            <TextBlock Grid.Row="1" Text="Teacher Controller"
                       FontSize="16" Foreground="#C9D1D9" FontWeight="SemiBold"
                       HorizontalAlignment="Center" Margin="0,4,0,0" />

            <!-- Branding Line -->
            <TextBlock Grid.Row="2" Text="Classroom Management System"
                       FontSize="11" Foreground="#8B949E" FontStyle="Italic"
                       HorizontalAlignment="Center" Margin="0,17,0,0" />

            <!-- Spacer + Loading indicator -->
            <StackPanel Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar x:Name="SplashProgress" Width="200" Height="3" IsIndeterminate="True"
                             Foreground="#58A6FF" Background="#21262D" BorderThickness="0" />
                <TextBlock x:Name="TxtLoadingStatus" Text="Initializing..."
                           FontSize="11" Foreground="#8B949E" HorizontalAlignment="Center"
                           Margin="0,8,0,0" />
            </StackPanel>

            <!-- Version + Build Date -->
            <TextBlock Grid.Row="4" x:Name="TxtVersion"
                       FontSize="11" Foreground="#8B949E"
                       HorizontalAlignment="Center" Margin="0,0,0,4" />

            <!-- Copyright -->
            <TextBlock Grid.Row="5" Text="(C) 2026 TAD Europe â€” https://tad-it.eu"
                       FontSize="10" Foreground="#484F58"
                       HorizontalAlignment="Center" />
        </Grid>
    </Border>
</Window>
