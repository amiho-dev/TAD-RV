<Window x:Class="TadTeacher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="TAD.RV — Teacher Controller"
        WindowState="Maximized"
        Background="#0D1117">

    <Window.Resources>
        <Style x:Key="ToolButton" TargetType="Button">
            <Setter Property="Background" Value="#21262D" />
            <Setter Property="Foreground" Value="#C9D1D9" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="16,8" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#30363D" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#30363D" />
                                <Setter TargetName="Bd" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#000" BlurRadius="8" Opacity="0.4" ShadowDepth="2" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="Tag" Value="danger">
                                <Setter Property="BorderBrush" Value="#F85149" />
                                <Setter Property="Foreground" Value="#F85149" />
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Tag" Value="danger"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Bd" Property="Background" Value="#F8514922" />
                            </MultiTrigger>
                            
                            <Trigger Property="Tag" Value="success">
                                <Setter Property="BorderBrush" Value="#3FB950" />
                                <Setter Property="Foreground" Value="#3FB950" />
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Tag" Value="success"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Bd" Property="Background" Value="#3FB95022" />
                            </MultiTrigger>

                            <Trigger Property="Tag" Value="info">
                                <Setter Property="BorderBrush" Value="#58A6FF" />
                                <Setter Property="Foreground" Value="#58A6FF" />
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Tag" Value="info"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Bd" Property="Background" Value="#58A6FF22" />
                            </MultiTrigger>

                            <Trigger Property="Tag" Value="warning">
                                <Setter Property="BorderBrush" Value="#D29922" />
                                <Setter Property="Foreground" Value="#D29922" />
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Tag" Value="warning"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Bd" Property="Background" Value="#D2992222" />
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
            <RowDefinition Height="32" />
        </Grid.RowDefinitions>

        <!-- Top Toolbar -->
        <Border Grid.Row="0" Background="#161B22" BorderBrush="#30363D" BorderThickness="0,0,0,1">
            <DockPanel Margin="12,0">
                <TextBlock Text="&#xE71E;" FontFamily="Segoe MDL2 Assets" FontSize="20"
                           Foreground="#58A6FF" VerticalAlignment="Center" DockPanel.Dock="Left" />
                <TextBlock Text="  TAD.RV" FontSize="16" FontWeight="Bold"
                           Foreground="#58A6FF" VerticalAlignment="Center" DockPanel.Dock="Left" />
                <TextBlock Text="  Teacher Controller" FontSize="13" FontWeight="Normal"
                           Foreground="#8B949E" VerticalAlignment="Center" DockPanel.Dock="Left" />
                <TextBlock x:Name="TxtDemoTag" Text="  DEMO" FontSize="10" FontWeight="Bold"
                           Foreground="#D29922" VerticalAlignment="Center" DockPanel.Dock="Left"
                           Visibility="Collapsed"
                           Padding="6,2" Background="#D2992233" />

                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                    <Button x:Name="BtnLockAll" Click="BtnLockAll_Click" Style="{StaticResource ToolButton}" Tag="danger">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="&#xE72E;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,1,8,0" />
                            <TextBlock Text="Lock All" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="BtnUnlockAll" Click="BtnUnlockAll_Click" Style="{StaticResource ToolButton}" Tag="success" Margin="8,0,0,0">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="&#xE785;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,1,8,0" />
                            <TextBlock Text="Unlock All" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="BtnFreezeAll" Click="BtnFreezeAll_Click" Style="{StaticResource ToolButton}" Tag="warning" Margin="8,0,0,0">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="&#xE7AD;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,1,8,0" />
                            <TextBlock Text="Freeze" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="BtnBlankAll" Click="BtnBlankAll_Click" Style="{StaticResource ToolButton}" Tag="info" Margin="8,0,0,0">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="&#xE7B3;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,1,8,0" />
                            <TextBlock Text="Blank" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="BtnMessage" Click="BtnMessage_Click" Style="{StaticResource ToolButton}" Tag="info" Margin="8,0,0,0">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="&#xE8BD;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,1,8,0" />
                            <TextBlock Text="Message" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="BtnCollect" Click="BtnCollect_Click" Style="{StaticResource ToolButton}" Margin="8,0,0,0">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="&#xE8B7;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,1,8,0" />
                            <TextBlock Text="Collect" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="BtnRefresh" Click="BtnRefresh_Click" Style="{StaticResource ToolButton}" Margin="8,0,0,0">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="&#xE72C;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,1,8,0" />
                            <TextBlock Text="Refresh" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- WebView2 Dashboard -->
        <wv2:WebView2 x:Name="DashboardWebView" Grid.Row="1"
                      DefaultBackgroundColor="#0D1117" />

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#161B22" BorderBrush="#30363D" BorderThickness="0,1,0,0">
            <DockPanel Margin="12,0">
                <TextBlock x:Name="TxtStatus" Text="Ready" Foreground="#8B949E"
                           FontSize="11" VerticalAlignment="Center" DockPanel.Dock="Left" />
                <TextBlock x:Name="TxtBranding" Text="TAD.RV — The Greater Brother of te.comp NET.FX"
                           Foreground="#484F58" FontSize="10" FontStyle="Italic"
                           VerticalAlignment="Center" HorizontalAlignment="Center" />
                <TextBlock x:Name="TxtConnected" Text="0/50 connected" Foreground="#8B949E"
                           FontSize="11" VerticalAlignment="Center" DockPanel.Dock="Right"
                           HorizontalAlignment="Right" />
            </DockPanel>
        </Border>
    </Grid>
</Window>
